<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A3F4A"
    tools:context=".outing.OutingMainActivity">

    <TextView
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:text="외박/외출"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="28dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginRight="240dp"/>
    <TextView
        android:layout_width="56dp"
        android:layout_height="35dp"
        android:text="신청"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="28dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="65dp"
        android:layout_marginRight="-280dp"
        android:background="@drawable/baseline_close_24"
        android:backgroundTint="@color/white"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:text="신청할 날짜 와 시간 사유를 작성해주세요"
        android:textStyle="bold"
        android:textSize="10dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="115dp"
        android:layout_marginRight="180dp"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/outingBottomNav"
        android:layout_width="325dp"
        android:layout_height="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="155dp"
        app:menu="@menu/out_menu"
        />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/outingFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outingBottomNav"
        />



  </androidx.constraintlayout.widget.ConstraintLayout>