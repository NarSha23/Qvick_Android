<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A3F4A"
    tools:context=".HomeActivity">


    <ImageView
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:src="@drawable/qvick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white"
        android:layout_marginTop="60dp"
        android:layout_marginRight="250dp"
        />
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/settingBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="300dp"
        android:background="@drawable/baseline_density_medium_24"
        android:backgroundTint="@color/white"
        />

    <TextView
        android:layout_width="56dp"
        android:layout_height="40dp"
        android:text="출석"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="130dp"
        android:layout_marginRight="260dp"
        />

    <TextView
        android:layout_width="107dp"
        android:layout_height="30dp"
        android:text="출석완료"
        android:textStyle="bold"
        android:textColor="#41C982"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="260dp"
        android:gravity="center"
        />
    <TextView
        android:layout_width="107dp"
        android:layout_height="20dp"
        android:text="01월 16일 14시 10분"
        android:textStyle="bold"
        android:textColor="#C9C9C9"
        android:textSize="11dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="155dp"
        android:layout_marginLeft="260dp"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/qrCameraBtn"
        android:layout_width="336dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/white"
        android:layout_marginTop="190dp"
        android:background="@drawable/rounded_corner"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
        android:drawableLeft="@drawable/qr_code_btn"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/next_btn"
    />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="외출 신청"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="330dp"
        android:layout_marginRight="200dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="336dp"
        android:layout_height="225dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rounded_corner"
        android:layout_marginTop="380dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="날짜"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            />

        <TextView
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="사유"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="승인"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <View
            android:layout_width="321dp"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        
        <TextView
            android:id="@+id/dateText"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="1/14"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="40dp"
            />
        
        <TextView
            android:id="@+id/reasonText"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="금정산 데이트 다녀오겠습니다"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/approvalText"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="승인"
            android:textStyle="bold"
            android:textColor="#41C982"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="40dp"
            android:layout_marginTop="50dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>