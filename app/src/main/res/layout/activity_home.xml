<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A3F4A"
    tools:context=".home.HomeActivity">


    <LinearLayout
        android:id="@+id/HomeTopLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:src="@drawable/qvick"
            app:tint="@color/white"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="25dp"
            />

        <Space
            android:layout_width="220dp"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/settingBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/baseline_density_medium_24"
            android:backgroundTint="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/HomeCenterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/HomeTopLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:text="출석"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="25dp"
            />

        <Space
            android:layout_width="190dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="107dp"
                android:layout_height="30dp"
                android:text="출석완료"
                android:textStyle="bold"
                android:textColor="#41C982"
                android:textSize="20dp"
                android:layout_marginTop="130dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="107dp"
                android:layout_height="20dp"
                android:text="01월 16일 14시 10분"
                android:textColor="#C9C9C9"
                android:textSize="11dp"
                android:textStyle="bold"
                />

        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/qrCameraBtn"
        android:layout_width="336dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/white"
        android:layout_marginTop="190dp"
        android:background="@drawable/rounded_corner"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="25dp"
        android:drawableLeft="@drawable/qr_code_btn"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/next_btn"
    />

