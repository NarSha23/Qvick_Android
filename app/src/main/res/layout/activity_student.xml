<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A3F4A"
    tools:context=".privacy.TermsOfUseActivity">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backBtn"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/baseline_arrow_back_ios_new_24"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/pretendard_variable"
        android:text="회원가입"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="100dp"
        android:background="@color/white"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="304dp"
        android:layout_height="23dp"
        android:text="회원가입을 위해 정보를 입력해주세요."
        android:fontFamily="@font/pretendard_variable"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="31dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:fontFamily="@font/pretendard_variable"
        android:text="자신의 이름을 작성해주세요."
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="31dp"
        android:background="@drawable/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:hint="ex): 박규민"
        android:textStyle="bold"
        android:textSize="15dp"
        android:inputType="text"
        android:textColor="@color/white"
        android:gravity="start"
        android:paddingLeft="40dp"
        android:fontFamily="@font/pretendard_variable"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginTop="240dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/white"
        android:paddingTop="5dp"
        android:textColorHint="#D9D9D9"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_marginTop="300dp"
        android:layout_marginRight="150dp"
        android:fontFamily="@font/pretendard_variable"
        android:text="자신의 학번을 작성해주세요."
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginLeft="31dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/profile"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="31dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/studentIdEditText"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:hint="ex): 2210"
        android:textStyle="bold"
        android:textSize="15dp"
        android:inputType="number"
        android:textColor="@color/white"
        android:gravity="start"
        android:paddingLeft="40dp"
        android:fontFamily="@font/pretendard_variable"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="31dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/white"
        android:paddingTop="5dp"
        android:textColorHint="#D9D9D9"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:fontFamily="@font/pretendard_variable"
        android:text="자신의 기숙사 호실을 작성해주세요."
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="31dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/room"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="31dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/roomNumberEditText"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:hint="ex): 301호"
        android:textStyle="bold"
        android:textSize="15dp"
        android:inputType="text"
        android:textColor="@color/white"
        android:gravity="start"
        android:paddingLeft="40dp"
        android:fontFamily="@font/pretendard_variable"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="31dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/white"
        android:paddingTop="5dp"
        android:textColorHint="#D9D9D9"/>





    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/SignUpBtn"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#41C982"
        android:fontFamily="@font/pretendard_variable"
        android:text="회원가입"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_marginTop="550dp"
        android:layout_marginRight="27dp"
        android:layout_marginLeft="27dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>