<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".privacy.TermsOfUseActivity"
    android:background="#3A3F4A">


    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:fontFamily="@font/pretendard_variable"
        android:text="이용약관"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="100dp"
        android:background="@color/white"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="50dp"
        android:layout_height="27dp"
        app:tint="@color/white"
        android:src="@drawable/qvick"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="37dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    
    <TextView
        android:layout_width="90dp"
        android:layout_height="28dp"
        android:fontFamily="@font/pretendard_variable"
        android:text="약관동의"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="37dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:fontFamily="@font/pretendard_variable"
        android:text="필수항목 및 선택항목 약관에 동의해 주세요"
        android:textColor="@color/white"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="37dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="252dp"
        android:background="@drawable/border"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/fullAgreementCB"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:button="@color/white"
        android:background="@drawable/circular_check_box"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="270dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:layout_width="95dp"
        android:layout_height="27dp"
        android:fontFamily="@font/pretendard_variable"
        android:text="전체동의"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="268dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <CheckBox
        android:id="@+id/termsOfServiceCB"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:button="@color/white"
        android:background="@drawable/circular_check_box"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="350dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="185dp"
        android:layout_height="27dp"
        android:fontFamily="@font/pretendard_variable"
        android:text="사용자 이용약관(필수)"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="348dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/termsOfServiceBtn"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:background="@drawable/baseline_arrow_forward_ios_24"
        android:backgroundTint="@color/white"
        android:layout_marginTop="348dp"
        android:layout_marginRight="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/privacyCB"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:button="@color/white"
        android:background="@drawable/circular_check_box"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="410dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="185dp"
        android:layout_height="27dp"
        android:fontFamily="@font/pretendard_variable"
        android:text="개인정보수집/이용 동의(필수)"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="408dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/PrivacyBtn"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:background="@drawable/baseline_arrow_forward_ios_24"
        android:backgroundTint="@color/white"
        android:layout_marginTop="408dp"
        android:layout_marginRight="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextPageBtn"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#41C982"
        android:fontFamily="@font/pretendard_variable"
        android:layout_marginTop="550dp"
        android:text="완료"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>