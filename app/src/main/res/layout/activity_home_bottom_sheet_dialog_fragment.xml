    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeBottomSheetDialogFragment">

    <TextView
        android:layout_width="296dp"
        android:layout_height="19dp"
        android:text="QR 코드를 인식하여 출석체크 해 주세요"
