        android:layout_marginTop="-200dp"
        android:layout_gravity="center"
        android:textSize="16dp"
        />

    <androidx.camera.view.PreviewView
        android:id="@+id/cameraPreviewView"
        android:layout_width="268dp"
        android:layout_height="268dp"
        android:layout_gravity="center" />

